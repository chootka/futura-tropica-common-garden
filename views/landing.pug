            overflow: hidden;
            text-decoration: none;
        }
        .halfSpacer {
            cursor: normal;
            width: 15.5%;
            background: none;
            border: none;
        }
        .garden:hover {
            background: rgba(255,255,255,0.3);
        }
        .gardenContainer p.gardenHeader {
            margin-top: 30px;
            margin-bottom: 10px;
            width: 100%;
            display: inline-block;
        }
        p.name {
            position: relative;
            margin-top: 2px;
            width: 100%;
            font-size: 13px;
        }
        .activeGarden p.name {
            margin-top: 10px;
            color: #fff;
            font-size: 14px;
        }
        form {
