        }

        .menu {
            position: fixed;
            top: 0;
            left: -140px;
            padding-top: 50px;
            padding-left: 10px;
            width: 140px;
            height: 100vh;
            background: hsl(133,50%,68%);
            z-index: 1;
            box-sizing: border-box;
            transition: left 0.3s;
        }
        .menu.active {
            left: 0;
        }
        .menuItem {
            padding: 3px;
        }
        .button {
            position: absolute;
            left: 155px;
            top: 10px;
            width: 30px;
            height: 30px;
            transition: left 0.3s;
            cursor: pointer;
        }
        .hamburger {
            position: absolute;
            left: 0;
            top: 0;
            width: 30px;
            margin-top: 13px;
            height: 4px;
            background: #fff;
            border-radius: 2px;
            transition: background 0.3s;
        }
        .hamburger:before {
            position: absolute;
            left: 0;
            top: -11px;
            width: 30px;
            content: "";
            height: 4px;
            background: #fff;
            border-radius: 2px;
            transition: transform 0.3s, width 0.3s;
            transform-origin: left center;
        }
        .hamburger:after {
            position: absolute;
            left: 0;
            top: 11px;
            width: 30px;
            content: "";
            height: 4px;
            background: #fff;
            border-radius: 2px;
            transition: background 0.3s;
            transition: transform 0.3s, width 0.3s;
            transform-origin: left center;
        }
        .menu.active .button {
            left: 15px;
        }
        .menu.active .hamburger {
            background: rgba(255,255,255,0);
        }

        .menu.active .hamburger:before {
            transform: rotate(45deg);
            width: 31px;
        }
        .menu.active .hamburger:after {
            transform: rotate(-45deg);
            width: 31px;
        }

